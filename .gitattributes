# Forza il riconoscimento di file .jsx come JavaScript
*.jsx linguist-language=JavaScript

# Forza il riconoscimento di file .tsx come TypeScript
*.tsx linguist-language=TypeScript

# Forza il riconoscimento di file .js come JavaScript
*.js linguist-language=JavaScript

# Forza il riconoscimento di file .ts come TypeScript
*.ts linguist-language=TypeScript

# Ignora file di configurazione e CSS/Tailwind
*.css linguist-vendored
*.scss linguist-vendored
tailwind.config.js linguist-vendored
postcss.config.js linguist-vendored

# Impostazioni globali per tutti i file di testo
* text=auto

# Impostazioni specifiche per file di configurazione e script
*.json    text eol=lf
*.html    text eol=lf
*.md      text eol=lf
*.yml     text eol=lf
*.yaml    text eol=lf
*.sh      text eol=lf

# Impostazioni per immagini binarie
*.png     binary
*.jpg     binary
*.jpeg    binary
*.gif     binary
*.ico     binary
*.svg     binary

# Impostazioni per file font binari
*.woff    binary
*.woff2   binary
*.ttf     binary
*.otf     binary

# Impostazioni per file multimediali binari
*.mp4     binary
*.mp3     binary
*.wav     binary

# Impostazioni per file di archiviazione binari
*.zip     binary
*.gz      binary
*.tar     binary
*.rar     binary

# Gestione delle differenze per lockfile
package-lock.json merge=union
yarn.lock merge=union

# Ignora i cambiamenti di permessi eseguibili
*.sh -crlf -diff
*.bat -crlf -diff

# Assicurarsi che i file di configurazione Git siano trattati correttamente
.gitattributes export-ignore
.gitignore export-ignore
